<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@color/bg_gray" 
        android:padding="20dp"
        >

        <com.dev.dongworry.customview.CButton
            android:id="@+id/button_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_selector_frame"
            android:text="@string/inviteFriends" 
            android:textColor="@color/blue"
            />

        <!-- 二维码显示 -->
        <TextView
            android:id="@+id/textView_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_invite"
            android:layout_below="@+id/button_invite"
            android:layout_marginTop="28dp"
            android:text="@string/inviteFriendsTips"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView_invite_QRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_invite"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:src="@drawable/voice_stop" />
        
    </RelativeLayout>
    
</LinearLayout>